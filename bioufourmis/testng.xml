<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Bioufourmis_Test" parallel="tests" thread-count="2">
    <test name="TestsOnChrome">
        <parameter name ="browser" value="Chrome"/>
        <classes>
            <class name="com.qa.automation.ecommerce.EcommerceTest"/>
            <class name="com.qa.automation.makemytrip.MakeMyTripTest"/>
        </classes>
    </test>
    <test name="TestsOnFirefox">
        <parameter name ="browser" value="Firefox"/>
        <classes>
            <class name="com.qa.automation.ecommerce.EcommerceTest"/>
            <class name="com.qa.automation.makemytrip.MakeMyTripTest"/>
        </classes>
    </test>
</suite>